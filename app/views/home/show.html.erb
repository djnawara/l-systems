<div data-controller="l-systems">
  <div class="m-1 absolute top-0 left-0 z-50" style="width: 300px;">
    <div class="m-3">
      <%= render(partial: 'shared/gradient_text', locals: { content: 'L-Systems', classes: 'text-5xl' }) %>
      <button type="button" class="mt-3 text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" data-action="click->l-systems#randomPreset">Random Preset</button>
    </div>

    <div class="mx-3 mt-6 p-3 drop-shadow rounded text-gray-400 bg-gray-800">
      <div class="text-lg font-bold mb-3 border-b border-gray-700">L-System</div>
      <div class="text-md">
        <div class="flex justify-between">
          <div><label for="l-system-preset" class="font-bold">Preset:</label></div>
          <div>
            <input id="l-system-preset" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="0" max="3" step="1" data-action="change->l-systems#update" data-l-systems-target="preset">
          </div>
        </div>
        <div class="flex justify-between">
          <div><label for="l-system-iterations" class="font-bold">Iterations:</label></div>
          <div>
            <input id="l-system-iterations" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="1" max="7" step="1" data-action="change->l-systems#update" data-l-systems-target="iterations">
          </div>
        </div>
      </div>
      <div class="mt-3">
        <button type="button" class="text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" data-action="click->l-systems#reloadConfig">Reload Config</button>
      </div>
    </div>

    <div class="mx-3 mt-6 p-3 drop-shadow rounded text-gray-400 bg-gray-800">
      <div class="text-lg font-bold mb-3 border-b border-gray-700">Branches</div>
      <div class="text-md">
        <div class="flex justify-between">
          <div><label for="branch-color" class="font-bold">Color:</label></div>
          <div>
            <input id="branch-color" class="color" type="color" name="body" value="#80461B" data-action="change->l-systems#update" data-l-systems-target="branchColor"></input>
          </div>
        </div>
        <div class="flex justify-between">
          <div><label for="branch-width" class="font-bold">Width:</label></div>
          <div>
            <input id="branch-width" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="0.5" max="10.0" step="0.5" data-action="change->l-systems#update" data-l-systems-target="branchWidth">
          </div>
        </div>
        <div class="flex justify-between">
          <div><label for="branch-length" class="font-bold">Length:</label></div>
          <div>
            <input id="branch-length" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="0.5" max="20.0" step="0.5" data-action="change->l-systems#update" data-l-systems-target="branchLength">
          </div>
        </div>
        <div class="flex justify-between">
          <div><label for="branch-angle" class="font-bold">Angle:</label></div>
          <div>
            <input id="branch-angle" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="8.0" max="50.0" value="22.5" step="0.5" data-action="change->l-systems#update" data-l-systems-target="branchAngle">
          </div>
        </div>
      </div>
    </div>

    <div class="mx-3 mt-6 p-3 drop-shadow rounded text-gray-400 bg-gray-800">
      <div class="text-lg font-bold mb-3 border-b border-gray-700">Leaves</div>
      <div class="text-md">
        <div class="flex justify-between">
          <div><label for="leaf-color" class="font-bold">Color:</label></div>
          <div>
            <input id="leaf-color" class="color" type="color" name="body" value="#B31B1B" data-action="change->l-systems#update" data-l-systems-target="leafColor"></input>
          </div>
        </div>
        <div class="flex justify-between">
          <div><label for="leaf-width" class="font-bold">Width:</label></div>
          <div>
            <input id="leaf-width" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="0.5" max="10.0" step="0.5" data-action="change->l-systems#update" data-l-systems-target="leafWidth">
          </div>
        </div>
        <div class="flex justify-between">
          <div><label for="leaf-length" class="font-bold">Length:</label></div>
          <div>
            <input id="leaf-length" class="bg-gray-200 accent-green-600 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" type="range" min="0.5" max="10.0" step="0.5" data-action="change->l-systems#update" data-l-systems-target="leafLength">
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="size-full relative z-0">
    <canvas data-l-systems-target="canvas"></canvas>
  </div>
</div>
